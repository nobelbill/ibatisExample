<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap>
	<typeAlias alias="board" type="com.multicampus.biz.board.BoardVO"/>

	<insert id="insertBoard" parameterClass="board">
		insert into board(seq, title, writer, content) 
		values((select nvl(max(seq), 0)+1 from board), #title#, #writer#, #content#)
	</insert>
	
	<update id="updateBoard" parameterClass="board">
		update board 
		set title=#title#, 
		    content=#content# 
		where seq=#seq#
	</update>
	
	<delete id="deleteBoard" parameterClass="board">
		delete board 
		where seq=#seq#
	</delete>
	
	<select id="getBoard" parameterClass="board"
	                      resultClass="board">
		select * 
		from board 
		where seq=#seq#
	</select>
	
	<select id="getBoardList" parameterClass="board"
	                          resultClass="board">
		select * 
		from board 
		where title like '%'||#searchKeyword#||'%' 
		order by seq desc
	</select>
</sqlMap>








